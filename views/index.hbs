{{#if NotLogin}}
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <div class="alert alert-danger">
          {{loginMsg}}
      </div>
    </div>
  </div>

{{/if}}

{{#if MsgBuying}}
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <div class="alert alert-danger">
          {{SuccessBuying}}
      </div>
    </div>
  </div>

{{/if}}


<div class="row">
  {{#each products}}
    <div class="col-sm-6 col-md-4">
      <div class="thumbnail">
        <img src="{{imagePath}}" alt="...">
        <div class="caption">

          <h3>{{title}}</h3>
          <p>{{description}}</p>
          <div class="clearfix">
            ${{price}}
            <div class="pull-right">
              <label for="sel1" class='label label-default'></label>
              <select class="form" id="sell" value='111'>
                <option>1</option>
                <option>2</option>
                <option>3</option>
                <option>4</option>
              </select>
            </div>
            <a href="/add-to-cart/{{this.id}}" onclick="show(this)" class="btn btn-success pull-right" role="button">add to cart</a>
          </div>
        </div>
      </div>
    </div>
  {{/each}}

</div>

<script type="text/javascript" src="javascripts/itemQty.js"></script>
